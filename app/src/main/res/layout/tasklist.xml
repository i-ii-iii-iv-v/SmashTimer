<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskList_Activity"
    android:background = "@drawable/gradient">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="23dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:backgroundTint="#fbc2eb"/>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabItem
                android:id="@+id/tabMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabTuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabWednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabThursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Th" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabSaturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sa" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabSunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Su" />

        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background = "@android:color/transparent">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>